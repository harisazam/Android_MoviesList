<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_SpeciesCardParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/ic_species" />

                <app.android.movieslist.utils.custom_views.CustomTextView
                    android:id="@+id/tv_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/str_name"
                    android:textColor="@color/colorLiteBlack"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <app.android.movieslist.utils.custom_views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/str_classification"
                android:textColor="@color/colorLiteBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <app.android.movieslist.utils.custom_views.CustomTextView
                android:id="@+id/tv_classification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/str_classification"
                android:textColor="@color/colorLiteBlack"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <app.android.movieslist.utils.custom_views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/str_eye_colors"
                android:textColor="@color/colorLiteBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <app.android.movieslist.utils.custom_views.CustomTextView
                android:id="@+id/tv_eye_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/str_eye_colors"
                android:textColor="@color/colorLiteBlack"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <app.android.movieslist.utils.custom_views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/str_hair_colors"
                android:textColor="@color/colorLiteBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <app.android.movieslist.utils.custom_views.CustomTextView
                android:id="@+id/tv_hair_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/str_hair_colors"
                android:textColor="@color/colorLiteBlack"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
